{
    "compilerOptions": {
        "lib": [
            "dom",
            "es2017"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "jsx": "react",
        "importHelpers": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "declaration": false,
        "sourceMap": false,
        "baseUrl": ".",
        "outDir": "./dist",
        "paths": {
            "*": ["./src/*"],
        },
        "typeRoots": [
            "typings/**/*.d.ts",
            "node_modules/@types"
        ]
    },
    "include": [
        "src",
        "typings/**/*.d.ts",
        "./node_modules/@types"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}

