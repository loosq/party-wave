{
    "compilerOptions": {
        "lib": [
            "dom",
            "es2019"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es6",
        "jsx": "react",
        "importHelpers": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "strict": true,
        "allowJs": true,
        "strictPropertyInitialization": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "declaration": false,
        "sourceMap": false,
        "baseUrl": ".",
        "outDir": "./dist",
        "paths": {
            "components/*": ["src/components/*"],
            "types": ["src/types/index.ts"],
            "utils/*": ["src/utils/*"],
            "hooks/*": ["src/hooks/*"],
            "libs/*": ["src/libs/*"],
            "slices/*": ["src/slices/*"],
            "images/*": ["src/images/*"],
            "api/*": ["src/api/*"],
            "store": ["src/store.ts"],
            "*": ["src/*"]
        },
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts",
        "**/*.test.ts"
    ],
    "files": ["src/types/files.d.ts"],
}

