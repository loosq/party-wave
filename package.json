        "sequelize-typescript": "2.1.3",
        "yup": "0.32.11"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "moduleNameMapper": {
            ".+\\.(css|styl|less|sass|scss)$": "jest-transform-css",
            "\\.svg": "<rootDir>/src/mock/svgMock.js"
        }
    }
}
