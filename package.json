    "dependencies": {
        "@reduxjs/toolkit": "1.8.4",
        "axios": "0.27.2",
        "body-parser": "1.20.0",
        "dayjs": "1.11.5",
        "dotenv": "^16.0.3",
        "express": "4.18.1",
        "express-session": "1.17.3",
        "https": "1.0.0",
        "morgan": "1.10.0",
        "node-sass": "7.0.1",
        "pg": "8.8.0",
        "pg-hstore": "2.3.4",
        "react": "18.2.0",
        "react-dom": "18.2.0",
